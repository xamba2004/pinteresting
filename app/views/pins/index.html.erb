<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<div class="panel panel-primary">
   <div class="panel-heading">List of all pins in the database</div>
    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>User ID</th>
          <th>Email address</th>
           <th></th>
           <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= pin.user_id %></td>
            <td><%= image_tag pin.image.url(:thumb) %></td>
            <td><%= pin.user.email if pin.user%></td>
            <td><%= link_to 'Show', pin %></td>
            <% if pin.user == current_user %>
              <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
              <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td>N/A</td>
              <td>N/A</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
    <br>

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path %>
<% end %>
